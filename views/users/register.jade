extends ../layout
block content
        div(id="alert-div")
        form(id="register-form")
            div
                span(style="color:white")  登录名:
                input(type="text",name="login",required="required",id="login-user")
            div
                span(style="color:white")  密码:
                input(type="password",name="password",required="required",id="password")
            div
                span(style="color:white")  确认密码:
                input(type="password",name="passwordconfirm",required="required")
                span(id="confirm-password-alert")
            div
                input(type="submit",value="注册",class="register-btn")
                a(href="/users/login",class="login-hurry") 已有账户直接登录


        script(src="/node_modules/js-md5/build/md5.min.js")
        script(src="/javascripts/register.js")
